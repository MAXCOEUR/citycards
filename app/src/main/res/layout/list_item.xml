<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carte_1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/carte"
    android:backgroundTint="@color/primary"
    android:layout_marginTop="@dimen/taille16"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    >

    <ImageButton
        android:id="@+id/star"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/star_outline"
        app:layout_constraintBottom_toTopOf="@+id/separation_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separation_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@color/onPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:textColor="@color/onPrimary"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/separation_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/star"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_region"
        android:layout_width="0dp"
        android:textColor="@color/onPrimary"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/separation_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


