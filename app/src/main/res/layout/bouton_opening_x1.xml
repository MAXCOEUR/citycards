<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/image_rond"
        android:layout_width="0dp"
        android:layout_height="339dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/back_rond_ouverture_x1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_carte"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:scaleType="centerInside"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:src="@drawable/img_solo_card"
        app:layout_constraintBottom_toBottomOf="@+id/image_rond"
        app:layout_constraintEnd_toEndOf="@+id/image_rond"
        app:layout_constraintStart_toStartOf="@+id/image_rond"
        app:layout_constraintTop_toTopOf="@+id/image_rond" />

    <TextView
        android:id="@+id/tirer_carte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Tirer 1 carte"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/image_rond"
        app:layout_constraintEnd_toEndOf="@+id/image_carte"
        app:layout_constraintStart_toStartOf="@+id/image_carte" />
</androidx.constraintlayout.widget.ConstraintLayout>